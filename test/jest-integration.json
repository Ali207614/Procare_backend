{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": "test/integration/.*\\.integration-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "testTimeout": 60000,
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.module.ts",
    "!src/**/dto/**",
    "!src/migrations/**",
    "!src/main.ts"
  ],
  "coverageDirectory": "./coverage/integration"
}